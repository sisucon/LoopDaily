<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
			  android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
			  android:orientation="vertical"
android:paddingBottom="20dp">
	<LinearLayout android:layout_width="match_parent"
				  android:layout_marginTop="30dp"
				  android:background="@drawable/text_pad"
				  android:focusableInTouchMode="true"
				  android:layout_marginLeft="30dp"
				  android:layout_marginRight="30dp"
				  android:focusable="true"
				  android:layout_height="47dp">
		<ImageView
				android:id="@+id/imageView"
				android:layout_width="52dp"
				android:layout_height="27dp"
				android:layout_gravity="center_vertical"
				app:srcCompat="@drawable/phone" />
		<com.google.android.material.textfield.TextInputLayout

				android:layout_width="match_parent"
													   android:layout_height="match_parent"
		android:id="@+id/login_phonenum_layout"
													   app:hintTextAppearance="@style/hintTextStyle"
		android:hint="请输入用户名或手机号">
			<com.sisucon.loopdaily.lib.MyEditText
					android:layout_width="match_parent"
												  android:layout_height="match_parent"
			android:id="@+id/login_phontNum"
			android:layout_weight="2"
					android:background="@null"

			android:layout_gravity="center"
			android:ems="10"
			android:inputType="text"/>
		</com.google.android.material.textfield.TextInputLayout>
	</LinearLayout>

	<LinearLayout android:layout_width="match_parent"
				  android:layout_marginTop="30dp"
				  android:background="@drawable/text_pad"
				  android:focusableInTouchMode="true"
				  android:layout_marginLeft="30dp"
				  android:layout_marginRight="30dp"
				  android:focusable="true"
				  android:layout_height="47dp">
		<ImageView
				android:id="@+id/imageView"
				android:layout_width="49dp"
				android:layout_height="27dp"
				android:layout_gravity="center_vertical"
				app:srcCompat="@drawable/ic_password" tools:ignore="DuplicateIds"/>
		<com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent"
															   android:layout_height="match_parent"
															   android:id="@+id/login_password_layout"
															   app:hintTextAppearance="@style/hintTextStyle"
													   >
			<com.sisucon.loopdaily.lib.MyEditText android:layout_width="match_parent"
												  android:layout_height="match_parent"
												  android:id="@+id/login_password"
												  android:layout_weight="2"
												  android:layout_gravity="center"
												  android:background="@null"
												  android:ems="10"
												  android:inputType="textPassword"/>
		</com.google.android.material.textfield.TextInputLayout>

	</LinearLayout>

	<TextView
			android:id="@+id/login_button"
			android:layout_marginTop="50dp"
			android:layout_gravity="center"
			android:textColor="#ffff"
			android:textSize="17sp"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/box_pad"
			android:text="@string/login"/>

</LinearLayout>