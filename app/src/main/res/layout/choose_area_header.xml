<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:background="@color/titleColor">


	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/left_view_relativelayout"
			android:layout_marginBottom="15dp"
			android:layout_marginTop="15dp">

		<com.sisucon.loopdaily.lib.CircleImageView
				android:id="@+id/left_view_userimg"
				android:layout_width="70dp"
				android:layout_height="70dp"
				android:layout_marginLeft="30dp"
				android:src="@drawable/nologin"/>

		<TextView
				android:id="@+id/main_menu_username"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/left_view_userimg"
				android:layout_alignStart="@+id/left_view_userimg"
				android:layout_alignLeft="@+id/left_view_userimg"
				android:layout_marginStart="10dp"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="10dp"

				android:textColor="#ffffff"
				android:textSize="20dp" />



	</RelativeLayout>


</LinearLayout>